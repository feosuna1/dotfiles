// Place your settings in this file to overwrite the default settings
{
    "editor.find.cursorMoveOnType": false,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        100,
        120
    ],
    "editor.tabSize": 4,

    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },

    // Terminals
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.fontFamily": "MesloLGM Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.profiles.osx": {
        "tmux": {
            "path": "bash",
            "args": ["-c", "tmux new -ADs ${PWD##*/}"],
            "icon": "terminal-tmux",
        },
        "fish": {
            "path": "/opt/homebrew/bin/fish",
            "icon": "terminal-bash",
        },
    },

    "telemetry.telemetryLevel": "crash",

    // File Specifics
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[plist]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
    },
    "[sql]": {
        "editor.tabSize": 2
    },
    "editor.guides.indentation": true,
    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.note-new-transformation": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "lldb.library": "/Applications/Xcode-14.0.1.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
    "editor.multiCursorModifier": "ctrlCmd",
    "terminal.external.osxExec": "iTerm.app",
    "grammarly.files.include": [
        "**/readme.md",
        "**/README.md",
        "**/*.txt",
        "**/COMMIT_EDITMSG"
    ],
}
